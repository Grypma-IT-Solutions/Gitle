<% if CurrentUser.IsAdmin: %>
<div class="row">
  <div class="large-12 columns">
    <h1>${item.Name}</h1>
  </div>
</div>

<div class="row">
  <div class="large-2 columns">Hostingpartij</div>
  <div class="large-10 columns">${?item.HostingCompany}</div>
</div>

<div class="row">
  <div class="large-2 columns">Intern</div>
  <div class="large-10 columns"><% if item.IsExternal: %><i class="fa fa-times red"></i><% else: %><i class="fa fa-check green"></i><% end %></div>
</div>

<div class="row">
  <div class="large-2 columns">Beschrijving</div>
  <div class="large-10 columns">${?item.Description}</div>
</div>

<div class="row">
  <div class="large-12 columns">
    <h2>Contactpersonen</h2>
    <table class="small-blocks" id="customers">
      <thead>
        <tr>
          <th>Naam</th>
          <th>Emailadres</th>
          <th>Telefoonnummer</th>
        </tr>
      </thead>
      <tbody>
        <% for contact in item.Contacts: %>
        <tr>
          <td>${contact.FullName}</td>
          <td>${contact.Email}</td>
          <td>${contact.PhoneNumber}</td>
        </tr>
        <% end %>
        <% if item.Contacts.Count == 0 :%>
          <td>Nog geen contactpersonen toegevoegd aan deze server.</td>
          <td></td><td></td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <h2>Installaties</h2>
    <table class="tablesorter small-blocks">
      <thead>
        <tr>
          <th>Naam</th>
          <th>Applicatie</th>
          <th>Omgeving</th>
          <th>Klant</th>
          <th>URL</th>
          <th class="{sorter: false}"></th>
        </tr>
      </thead>
      <tbody>
        <% for installation in item.Installations: %>
        <tr>
          <td class="name">${?installation.Name}</td>
          <td class="application"><a href="/Application/${?installation.Application.Slug}/view">${?installation.Application.Name}</a></td>
          <td class="installation-type">${?installation.InstallationType}</td>
          <td class="customer"><a href="/Customer/${?installation.Application.Customer.Slug}/view">${?installation.Application.Customer.Name}</a></td>
          <td class="url"><a target="_blank" href="https://myfinance.demo.auxilium.nl">${?installation.Url}</a></td>
          <td>
            <ul class="button-group">
              <li><a class="button tiny secondary no-margin" href="/installation/${?installation.Slug}/view">Bekijk</a></li>
            </ul>
          </td>
        </tr>
        <% end %>
        <% if item.Installations.Count == 0 :%>
      <td>Nog geen installaties toegevoegd aan deze server.</td>
      <td></td><td></td><td></td><td></td><td></td><td></td>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<% else :%>
Actie niet toegestaan.
<% end %>